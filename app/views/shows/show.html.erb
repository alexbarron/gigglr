<h1>Shows#show</h1>
<%= @show.name %></br>
<%= @show.description %></br>
<%= @show.showtime %></br>
<%= @show.venue.name %></br>
<%= @show.venue.address.full_address %></br>
<% if @booked_comedians.empty? %>
	<p>No comedians booked yet</p>
<% elsif @booked_comedians.count >= 1 %>
	<ul>
		<% @booked_comedians.each do |comedian| %>
			<li>
				<%= link_to comedian.name, comedian %>
				<% if user_signed_in? && current_user.admin? %>
					<%= form_for(@show.booked_comedians.find_by(comedian_id: comedian.id),
					html: { method: :delete }) do |f| %>
						<%= f.hidden_field :show_id, value: @show.id %>
						<%= f.hidden_field :comedian_id, value: comedian.id %>
						<%= f.submit 'Remove Comedian' %>
					<% end %>
				<% end %>
			</li>
		<% end %>
	</ul>
<% end %>

<% if user_signed_in? && current_user.admin? %>
	<%= link_to 'Delete', show_path(@show), method: :delete, data: { confirm: 'Are you sure?' } %>
	<%= link_to 'Edit', edit_show_path(@show) %>
	<%= render 'add_comedian' unless @comedians.empty? %>
<% end %>
