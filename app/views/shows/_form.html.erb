<%= simple_form_for @show do |f| %>
	<%= f.input :name %>
	<%= f.input :description %>
	<%= f.input :showtime %>

	<%= f.label :venue_id %><br>
    <%= f.select(:venue_id) do %>
      <% @venues.each do |venue| -%>
        <%= content_tag(:option, venue.name, value: venue.id) %>
      <% end %>
    <% end %>
	<%= f.submit 'Submit' %>
<% end %>