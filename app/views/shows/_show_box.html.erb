<div class="col-md-6">
  <%= link_to(show) do %>
    <div class="box panel panel-default" style="height:200px">
      <div class="panel-body row">
        <div class="col-md-6">
              <h2><%= link_to show.name, show %></h2>

              <h4>
                <%= link_to show.short_datetime, show %><br/>
                <%= link_to show.venue.name, show %><br />
                <%= link_to show.venue.city_state, show %><br />
              </h4>
            </div>
            <div class="col-md-6">
              <%= link_to image_tag(show.comedians.first.picture.url(:medium), width: "100%"), show unless show.comedians.first.nil? %>
            </div>
      </div>
    </div>
  <% end %>
</div>