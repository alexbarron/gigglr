<div class="row">
    <h2>
    	<%= @comedian.name %> (<%= @comedian.fan_count %> <%= 'Fan'.pluralize(@comedian.fan_count) %>)
    </h2>
</div>

<div class="row">
	<div class="col-md-4">
		<%= follow_unfollow(@comedian) %>
		<br />
		<%= image_tag @comedian.picture.url(:medium) %>
		<p><%= @comedian.description %></p>
	</div>

	<div class="col-md-8">
		<br /><br />
		<h4><%= @shows.count %> <%= 'Upcoming Show'.pluralize(@shows.count) %> Across the Country</h4>
		<% if @shows.any? %>
			<ul class="shows">
			    <% @shows.each do |show| %>
				    <li>
				    	<%= link_to "#{show.short_datetime} - #{show.venue.city_state}", show %>
				    </li>
			    <% end %>
			</ul>
		<% end %>
	</div>
</div>

<%= comedian_show_options(@comedian) %>