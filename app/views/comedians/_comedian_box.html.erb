<div class="col-md-6">
  <%= link_to(comedian) do %>
    <div class="box panel panel-default">
      <div class="panel-body row">
        <div class="col-md-6">
          <h2>
            <%= link_to comedian.name, comedian %><br />
            (<span id="fans-<%= comedian.id %>"><%= comedian.users.count %></span> <%= 'Fan'.pluralize(comedian.users.count) %>)
          </h2>

          <%= follow_unfollow(comedian) %>

          <h2>Upcoming Shows:</h2> 
          <% comedian.future_shows.limit(3).each do |show| %>
            <p><%= link_to "#{show.short_time} #{show.venue.city_state}", show %></p>
          <% end %>
              
        </div>
        <div class="col-md-6">
          <%= link_to image_tag(comedian.picture.url(:medium), width: "230"), comedian %>
        </div>
      </div>
    </div>
  <% end %>
</div>